{{! template-lint-disable require-input-label }}
<div class='jumbotron text-center'>
  <h1>{{this.headerMessage}}</h1>

  <br /><br />

  <p>Don't miss our launch date, request an invitation now.</p>

  <div class='form-horizontal form-group form-group-lg row'>
    <div
      class='col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2'
    >
      <Input
        @type='email'
        class='form-control'
        placeholder='Please type your e-mail address.'
        autofocus='autofocus'
        @value={{this.emailAddress}}
      />
    </div>
    <div class='col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3'>
      <button
        disabled={{this.isDisabled}}
        class='btn btn-primary btn-lg btn-block'
        type='button'
        {{on 'click' this.saveInvitation}}
      >Request invitation</button>
    </div>
  </div>

  {{#if this.responseMessage}}
    <div class='alert alert-success'>{{this.responseMessage}}</div>
  {{/if}}
</div>